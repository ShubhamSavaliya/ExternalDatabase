<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".ShayriImageActivity">


    <LinearLayout
        android:id="@+id/linear_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/downloadArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgChangeBg"
                    android:layout_width="match_parent"
                    android:layout_height="550dp"
                    android:layout_centerInParent="true"
                    android:background="@color/white" />

                <ImageView
                    android:id="@+id/img_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img7" />

                <TextView
                    android:id="@+id/txt_Shayriimage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginHorizontal="40dp"
                    android:gravity="center"
                    android:text="Shayri"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/topbg">

                <ImageView
                    android:id="@+id/imgshayriimageback"
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:padding="7dp"
                    android:src="@drawable/backarrow" />

                <TextView
                    android:id="@+id/txt_Shayricategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:fontFamily="@font/aclonica"
                    android:gravity="center"
                    android:text="Shayri"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center">

                    <RelativeLayout
                        android:id="@+id/relative1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="5dp"
                        android:gravity="center">


                        <ImageView

                            android:id="@+id/imge"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/ellipse" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:paddingBottom="5dp"
                            android:src="@drawable/downloads" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relative2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="5dp"

                        android:layout_toRightOf="@+id/relayive1"
                        android:gravity="center">


                        <ImageView
                            android:id="@+id/ime"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/ellipse" />

                        <ImageView
                            android:id="@+id/dislike"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:paddingBottom="5dp"
                            android:src="@drawable/heart" />

                        <ImageView
                            android:id="@+id/like"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:paddingBottom="5dp"
                            android:src="@drawable/like"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relative3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="5dp"


                        android:layout_toRightOf="@+id/relayive2"
                        android:gravity="center">


                        <ImageView
                            android:id="@+id/im"
                            android:layout_width="70dp"
                            android:layout_height="70dp"

                            android:src="@drawable/ellipse" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:paddingBottom="5dp"
                            android:src="@drawable/sharing" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relative4"
                        android:layout_width="60dp"
                        android:layout_height="60dp"

                        android:layout_marginHorizontal="5dp"
                        android:layout_toRightOf="@+id/relayive3"
                        android:gravity="center">


                        <ImageView
                            android:id="@+id/i"
                            android:layout_width="70dp"
                            android:layout_height="70dp"

                            android:src="@drawable/ellipse" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:paddingBottom="5dp"
                            android:src="@drawable/copy" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relative5"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_toRightOf="@+id/relayive3"
                        android:gravity="center">


                        <ImageView
                            android:id="@+id/other"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/ellipse" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:paddingBottom="5dp"
                            android:src="@drawable/threedots" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>